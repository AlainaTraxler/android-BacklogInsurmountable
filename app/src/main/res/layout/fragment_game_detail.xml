<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.backloginsurmountable.ui.GameDetailFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:alpha=".10"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:id="@+id/imageView_Splash"
        android:layout_gravity="center_horizontal|top"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:id="@+id/imageView_Screenshot"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/placeholder_screenshots" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Deck"
        android:id="@+id/textView_Deck"
        android:textAlignment="viewStart"
        android:gravity="start"
        android:paddingLeft="10dp"
        android:layout_below="@+id/textView_Name"
        android:layout_toRightOf="@+id/checkBox_Complete"
        android:layout_toEndOf="@+id/checkBox_Complete" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complete"
        android:id="@+id/checkBox_Complete"
        android:checked="false"
        android:layout_below="@+id/imageView_Screenshot"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100%"
        android:id="@+id/checkBox_100"
        android:checked="false"
        android:layout_below="@+id/checkBox_Complete"
        android:layout_alignParentLeft="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blind"
        android:id="@+id/checkBox_Blind"
        android:checked="false"
        android:layout_below="@+id/checkBox_100"
        android:layout_alignParentLeft="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hardcore"
        android:id="@+id/checkBox_Hardcore"
        android:checked="false"
        android:layout_below="@+id/checkBox_Blind"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:id="@+id/textView_Name"
        android:paddingLeft="10dp"
        android:layout_below="@id/imageView_Screenshot"
        android:layout_alignBottom="@+id/checkBox_Complete"
        android:layout_toRightOf="@+id/checkBox_Complete"
        android:layout_toEndOf="@+id/checkBox_Complete" />

</RelativeLayout>
