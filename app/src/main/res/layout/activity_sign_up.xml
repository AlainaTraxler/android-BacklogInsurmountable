<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.backloginsurmountable.SignUpActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:src="@drawable/simple_gears_background"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:foregroundTintMode="add"
        android:foregroundTint="#383838"
        android:background="#ff0000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_Username"
        android:layout_marginTop="221dp"
        android:hint="Username"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/editText_Password"
        android:layout_alignStart="@+id/editText_Password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText_Password"
        android:layout_below="@+id/editText_Username"
        android:layout_centerHorizontal="true"
        android:hint="Password" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember Me"
        android:id="@+id/checkBox_Remember"
        android:layout_below="@+id/editText_Password"
        android:layout_alignLeft="@+id/editText_Password"
        android:layout_alignStart="@+id/editText_Password"
        android:checked="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/button_SignUp"
        android:layout_below="@+id/checkBox_Remember"
        android:layout_alignLeft="@+id/checkBox_Remember"
        android:layout_alignStart="@+id/checkBox_Remember"
        android:layout_alignRight="@+id/editText_Password"
        android:layout_alignEnd="@+id/editText_Password"
        android:background="@color/accent_material_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="- OR -"
        android:id="@+id/textView"
        android:layout_below="@+id/button_SignUp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:id="@+id/button_SignIn"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/button_SignUp"
        android:layout_alignStart="@+id/button_SignUp"
        android:layout_alignRight="@+id/button_SignUp"
        android:layout_alignEnd="@+id/button_SignUp"
        android:background="@color/accent_material_light" />
</RelativeLayout>
