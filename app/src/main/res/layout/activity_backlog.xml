<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.backloginsurmountable.BacklogActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:src="@drawable/nes_splash_green"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:foregroundTintMode="add"
        android:foregroundTint="#383838" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_NESGameList"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/textView_Completed"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#78ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Completed"
        android:id="@+id/textView_CompletedHeader"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_alignParentStart="true"
        android:textSize="19sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="NUM"
        android:id="@+id/textView_Remaining"
        android:layout_below="@+id/textView_RemainingHeader"
        android:layout_alignLeft="@+id/textView_RemainingHeader"
        android:layout_alignStart="@+id/textView_RemainingHeader"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Remaining"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/textView_RemainingHeader"

        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="19sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="NUM"
        android:id="@+id/textView_Completed"
        android:layout_below="@+id/textView_CompletedHeader"
        android:layout_alignRight="@+id/textView_CompletedHeader"
        android:layout_alignEnd="@+id/textView_CompletedHeader"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NUM"
        android:id="@+id/textView_PercentCompleted"
        android:textSize="19sp"
        android:layout_below="@+id/textView_Completed"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
